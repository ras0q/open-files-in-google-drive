{
  "compilerOptions": {
    "lib": [
      "dom",
      "deno.window"
    ]
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "imports": {
    "webextension-polyfill": "https://esm.sh/webextension-polyfill@0.12.0/"
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "build": {
      "command": "deno bundle --minify --platform browser --outdir dist src/*.ts",
      "dependencies": [
        "cp-assets"
      ]
    },
    "cp-assets": "rm -rf ./dist && mkdir -p ./dist && cp ./src/manifest.json ./dist/manifest.json && cp -r ./src/public ./dist/public",
    "dev": "deno task build --watch"
  }
}
